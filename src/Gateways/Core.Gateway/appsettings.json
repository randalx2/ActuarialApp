{
  "AllowedHosts": "*",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7129",
    "ServiceDiscoveryProvider": {
      "Host": "consul",
      "Port": 7129,
      "Type": "Consul"
    },
    "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ]
  },
  "OcelotOptions": {
    "DefaultDownstreamScheme": "https",
    "Routes": {
      "Core": {
        "UpstreamPathTemplates": [
          "/api/core/v1/weatherforecast",
          "/api/core/v1/weatherforecast/",
          "/api/core/v1/weatherforecast/{everything}"
        ],
        "Downstream": "https://localhost:7140"
      },
      "Pipeline": {
        "UpstreamPathTemplates": [
          "/api/pipeline/v1/pipeline/postmessage",
          "/api/pipeline/v1/pipeline/postmessage/",
          "/api/pipeline/v1/pipeline/postmessage/{everything}"
        ],
        "Downstream": "https://localhost:7187"
      },
      "Schema": {
        "UpstreamPathTemplates": [
          "/api/schema/v1/schema/addasync",
          "/api/schema/v1/schema/addasync/",
          "/api/schema/v1/schema/addasync/{everything}",
          "/api/schema/v1/schemadesign/getallasync",
          "/api/schema/v1/schemadesign/getallasync/",
          "/api/schema/v1/schemadesign/getallasync/{everything}"
        ],
        "Downstream": "https://localhost:7246"
      }
    }
  }
}
