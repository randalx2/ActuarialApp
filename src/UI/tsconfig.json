{
  "compilerOptions": {
    "jsx": "react",
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "./tests/setupTest.ts"],
  "exclude": ["node_modules/**/*"]
}
